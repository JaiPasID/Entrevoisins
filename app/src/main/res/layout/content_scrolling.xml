<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_detail_voisin"
    tools:context=".ui.neighbour_list.ActivityDetailVoisin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pageScroll">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="20sp"
                android:drawableStart="@drawable/map"
                android:drawablePadding="10dp"
                android:layout_marginStart="10dp"/>


                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="20sp"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="10dp"
                    android:layout_marginStart="10dp"/>

                <TextView

                    android:layout_marginTop="15dp"
                    android:id="@+id/site_internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="20sp"
                    android:drawableStart="@drawable/reseaux"
                    android:drawablePadding="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>


            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/a_propos_de_moi"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/text_a_propos_de_moi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"/>


        </android.support.v7.widget.LinearLayoutCompat>



    </android.support.v7.widget.CardView>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v4.widget.NestedScrollView>